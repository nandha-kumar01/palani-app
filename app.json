{
  "expo": {
    "name": "Palani Pathayathirai",
    "slug": "palani-pathayathirai",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#667eea",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.palani.pathayathirai",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to track your pathayathirai journey on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to track your pathayathirai journey on the map."
      }
    },
    "android": {
      "package": "com.palani.pathayathirai",
      "adaptiveIcon": {
        "backgroundColor": "#667eea"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACTIVITY_RECOGNITION",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-audio",
      "expo-sqlite",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Palani Pathayathirai to use your location to track your journey."
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Allow Palani Pathayathirai to access motion sensors to count your steps accurately."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7b74b2b7-76ff-4739-8dfd-45d0c01b203d"
      }
    }
  }
}
