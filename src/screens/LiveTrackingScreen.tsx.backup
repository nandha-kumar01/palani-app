                  {language === 'tamil' ? '‡Æ§‡ØÇ‡Æ∞‡ÆÆ‡Øç' : 'Distance'}
                </Text>
                <Text style={styles.statValue}>{formatDistance(distance)}</Text>
              </View>
              
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>
                  {language === 'tamil' ? '‡Æ®‡Øá‡Æ∞‡ÆÆ‡Øç' : 'Time'}
                </Text>
                <Text style={styles.statValue}>{formatDuration(duration)}</Text>
              </View>
              
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>
                  {language === 'tamil' ? '‡Æµ‡Øá‡Æï‡ÆÆ‡Øç' : 'Speed'}
                </Text>
                <Text style={styles.statValue}>{formatSpeed(speed / 3.6)}</Text>
              </View>
              
              <View style={styles.statItem}>
                <Text style={styles.statLabel}>
                  {language === 'tamil' ? '‡Æµ‡Øá‡Æï‡ÆÆ‡Øç' : 'Pace'}
                </Text>
                <Text style={styles.statValue}>{formatPace(speed / 3.6)}</Text>
              </View>
            </View>
          </WhiteCard>
        </View>
      </View>

      {/* Controls */}
      <View style={styles.controls}>
        {!isTracking ? (
          <GradientButton
            onPress={handleStartTracking}
            style={styles.startButton}
          >
            <View style={styles.buttonContent}>
              <Text style={styles.buttonIcon}>üö∂‚Äç‚ôÇÔ∏è</Text>
              <Text style={styles.buttonText}>
                {language === 'tamil' ? '‡Æ™‡Æ§‡Øà‡ÆØ‡Ææ‡Æ§‡•ç‡Æ§‡Æø‡§∞‡Øà ‡Æ§‡Øä‡§°‡Æô‡Øç‡Æï‡ØÅ‡§ï' : 'Start Pathayathirai'}
              </Text>
            </View>
          </GradientButton>
        ) : (
          <View style={styles.trackingControls}>
            <TouchableOpacity
              onPress={handlePauseResume}
              style={[styles.controlButton, styles.pauseButton]}
            >
              <Text style={styles.controlButtonIcon}>
                {isPaused ? '‚ñ∂Ô∏è' : '‚è∏Ô∏è'}
              </Text>
              <Text style={styles.controlButtonText}>
                {isPaused 
                  ? (language === 'tamil' ? '‡§§‡•ã‡§°‡§°‡§æ‡§ó‡•Å„ÇØ' : 'Resume')
                  : (language === 'tamil' ? '‡§®‡§ø‡§≤◊®‡ØÅ‡§§‡•ç‡Æ§‡ØÅ‡§ï' : 'Pause')
                }
              </Text>
            </TouchableOpacity>

            <TouchableOpacity
              onPress={handleEndTracking}
              style={[styles.controlButton, styles.endButton]}
            >
              <Text style={styles.controlButtonIcon}>‚èπÔ∏è</Text>
              <Text style={styles.controlButtonText}>
                {language === 'tamil' ? '‡ÆÆ‡ØÅ‡§°‡§ø‡§ï‡•ç‡Æï‡•Å‡§ï' : 'End Walk'}
              </Text>
            </TouchableOpacity>
          </View>
        )}

        {/* Quick Actions */}
        <View style={styles.quickActions}>
          <TouchableOpacity 
            style={styles.quickAction}
            onPress={() => navigation.navigate('Music')}
          >
            <Text style={styles.quickActionIcon}>üéµ</Text>
            <Text style={styles.quickActionText}>Music</Text>
          </TouchableOpacity>
          
          <TouchableOpacity 
            style={styles.quickAction}
            onPress={() => navigation.navigate('Gallery')}
          >
            <Text style={styles.quickActionIcon}>üì∑</Text>
            <Text style={styles.quickActionText}>Photo</Text>
          </TouchableOpacity>
          
          <TouchableOpacity 
            style={styles.quickAction}
            onPress={() => navigation.navigate('Madangal')}
          >
            <Text style={styles.quickActionIcon}>üèïÔ∏è</Text>
            <Text style={styles.quickActionText}>Rest</Text>
          </TouchableOpacity>
        </View>
      </View>
    </View>
  );
}

